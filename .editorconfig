root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
tab_width = 4
indent_style = tab
indent_size = tab

[*.html]
indent_style = tab
indent_size = tab

[*.json]
indent_style = tab
indent_size = tab

[*.php]
indent_style = tab
indent_size = tab

[*.yml]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4
